{
  "name": "fabric-powerbi-toolkit",
  "displayName": "Fabric & Power BI Toolkit for Claude",
  "description": "Auto-configures MCP servers for Microsoft Fabric (83+ tools), Power BI Modeling, and Translation Audit. Generates CLAUDE.md knowledge base for Claude Code.",
  "version": "1.4.0",
  "publisher": "JasonNicolini",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Data Science"
  ],
  "keywords": [
    "fabric",
    "power bi",
    "mcp",
    "claude",
    "dax",
    "lakehouse"
  ],
  "activationEvents": [
    "workspaceContains:**/*.pbip",
    "workspaceContains:**/*.Dataset",
    "workspaceContains:**/*.SemanticModel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fabricPowerbi.setupWorkspace",
        "title": "Fabric & Power BI: Full Setup"
      },
      {
        "command": "fabricPowerbi.checkPrereqs",
        "title": "Fabric & Power BI: Check Prerequisites"
      },
      {
        "command": "fabricPowerbi.regenerateMcpJson",
        "title": "Fabric & Power BI: Regenerate .mcp.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "tsc --noEmit",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
